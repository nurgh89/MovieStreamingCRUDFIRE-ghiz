<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AddActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tolbar"
        android:layout_width="match_parent"
        app:title="Add Product"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/errorName">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/selected_photo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/buttonImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="436dp"
        android:src="@drawable/film_scroll_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tolbar"
        app:layout_constraintStart_toStartOf="parent" />

     <TextView
         android:id="@+id/textUpdate"
         android:layout_width="match_parent"
         android:text="Update"
         android:textColor="#000"
         android:textSize="20dp"
         android:gravity="center"
         app:layout_constraintTop_toBottomOf="@+id/selected_photo"
         android:layout_height="wrap_content"/>


    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/errorName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="200dp"
            android:focusableInTouchMode="true"
            android:background="#566f9a"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tolbar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filmName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nama Movie"
                android:inputType="textEmailAddress">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/errorDirector"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="#566f9a"
            android:focusableInTouchMode="true"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filmDirector"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nama Movie"
                android:inputType="textEmailAddress">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/erroReleased"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:focusableInTouchMode="true"
            android:background="#566f9a"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/errorDirector">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filmReleased"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nama Movie"
                android:inputType="textEmailAddress">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/errorDescription"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:background="#566f9a"
            android:focusableInTouchMode="true"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/erroReleased"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/filmSynopsis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#000"
                android:gravity="left"
                android:hint="Deksripsi product"
                android:inputType="textEmailAddress">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>











</androidx.constraintlayout.widget.ConstraintLayout>
