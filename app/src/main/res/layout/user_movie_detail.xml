<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151c25"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/poster"
        android:layout_width="403dp"
        android:layout_height="317dp"
        android:src="@drawable/film_scroll_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <VideoView
            android:id="@+id/videoPlayer"
            android:layout_width="403dp"
            android:layout_height="317dp"/>


    </FrameLayout>

    <ImageView
        android:id="@+id/poster2"
        android:layout_width="126dp"
        android:layout_height="208dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/film_scroll_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poster" />

    <TextView
        android:id="@+id/namaFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toEndOf="@+id/poster2"
        app:layout_constraintTop_toBottomOf="@+id/poster"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/textreleased"
        android:layout_width="108dp"
        android:layout_height="22dp"
        android:layout_marginStart="12dp"
        android:text="Released Date  :"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/poster2"
        app:layout_constraintTop_toBottomOf="@+id/namaFilm"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/released"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Released Date"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toEndOf="@+id/textreleased"
        app:layout_constraintTop_toBottomOf="@+id/namaFilm"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/textdirector"
        android:layout_width="111dp"
        android:layout_height="23dp"
        android:text="Director            :"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toEndOf="@+id/poster2"
        app:layout_constraintTop_toBottomOf="@+id/textreleased"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Director"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.723"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/released"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/textsynopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@+id/poster2"
        app:layout_constraintTop_toBottomOf="@+id/textdirector"
        app:layout_constraintVertical_bias="0.081" />

    <TextView
        android:id="@+id/Synopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toEndOf="@+id/poster2"
        app:layout_constraintTop_toBottomOf="@+id/textsynopsis"
        app:layout_constraintVertical_bias="0.046" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="104dp"
        android:layout_height="22dp"
        app:layout_constraintEnd_toEndOf="@+id/poster2"
        app:layout_constraintStart_toStartOf="@+id/poster2"
        tools:layout_editor_absoluteY="547dp" />

</androidx.constraintlayout.widget.ConstraintLayout>